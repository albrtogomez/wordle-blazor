@inject ILocalStorageService LocalStorage
@inject LocalizationService LocalizationService

<CascadingValue Value="AncestorComponent">
    <div class="flex flex-col justifyt-start left-0 right-0 bottom-0 mb-3 h-[164px] w-screen max-w-[480px]">
        <div class="flex justify-between mb-[5px] mx-1">
            <Key KeyType="KeyType.Letter" KeyValue="'Q'" />
            <Key KeyType="KeyType.Letter" KeyValue="'W'" />
            <Key KeyType="KeyType.Letter" KeyValue="'E'" />
            <Key KeyType="KeyType.Letter" KeyValue="'R'" />
            <Key KeyType="KeyType.Letter" KeyValue="'T'" />
            <Key KeyType="KeyType.Letter" KeyValue="'Y'" />
            <Key KeyType="KeyType.Letter" KeyValue="'U'" />
            <Key KeyType="KeyType.Letter" KeyValue="'I'" />
            <Key KeyType="KeyType.Letter" KeyValue="'O'" />
            <Key KeyType="KeyType.Letter" KeyValue="'P'" />
        </div>

        <div class="flex justify-between mb-[5px] mx-1">
            <Key KeyType="KeyType.Letter" KeyValue="'A'" />
            <Key KeyType="KeyType.Letter" KeyValue="'S'" />
            <Key KeyType="KeyType.Letter" KeyValue="'D'" />
            <Key KeyType="KeyType.Letter" KeyValue="'F'" />
            <Key KeyType="KeyType.Letter" KeyValue="'G'" />
            <Key KeyType="KeyType.Letter" KeyValue="'H'" />
            <Key KeyType="KeyType.Letter" KeyValue="'J'" />
            <Key KeyType="KeyType.Letter" KeyValue="'K'" />
            <Key KeyType="KeyType.Letter" KeyValue="'L'" />
            @if (LocalizationService.CurrentLanguage == Language.Spanish)
            {
                <Key KeyType="KeyType.Letter" KeyValue="'Ñ'" />
            }
        </div>

        <div class="flex justify-between mb-[5px] mx-1">
            <Key KeyType="KeyType.Send" />
            <Key KeyType="KeyType.Letter" KeyValue="'Z'" />
            <Key KeyType="KeyType.Letter" KeyValue="'X'" />
            <Key KeyType="KeyType.Letter" KeyValue="'C'" />
            <Key KeyType="KeyType.Letter" KeyValue="'V'" />
            <Key KeyType="KeyType.Letter" KeyValue="'B'" />
            <Key KeyType="KeyType.Letter" KeyValue="'N'" />
            <Key KeyType="KeyType.Letter" KeyValue="'M'" />
            <Key KeyType="KeyType.Remove" />
        </div>
    </div>
</CascadingValue>



